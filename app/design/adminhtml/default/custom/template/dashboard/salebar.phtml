<?php if( sizeof($this->getTotals()) > 0 ): ?>
      <?php foreach( $this->getTotals() as $_total ): ?>
      <div class="col-xs-6 col-sm-2 icon-box entry-edit fit text-center">
          <fieldset class="no-margin a-center">
          	<?php 
          		$label = $_total['label'];
          		if ($label == 'Lifetime Sales'):?>
          			<i class="fa fa-large fa-primary fa-area-chart"></i>
             			<h4 class="nowrap lifetime"><?php echo $_total['value'] ?><span><?php echo $_total['decimals'] ?></span></h4>
             		<?php else :?>
             			<i class="fa fa-large fa-primary fa-pie-chart"></i>
             			<h4 class="nowrap average"><?php echo $_total['value'] ?><span><?php echo $_total['decimals'] ?></span></h4>
             		<?php endif;?>
          <div class="text-center">
          	<h6 class="text-secondary"><?php echo $_total['label'] ?></h6>
          </div>
          </fieldset>
      </div>
      <?php endforeach; ?>
<?php endif; ?>
